<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vidur.codeclan.bridge.Activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_top_tabs"></include>

    </RelativeLayout>

        <RelativeLayout
        android:id="@+id/main_layout_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_layout_top">

        <include layout="@layout/layout_centre_content"></include>

    </RelativeLayout>

        <include layout="@layout/bottom_navigation_layout"></include>


</RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
